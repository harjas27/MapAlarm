<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:orientation = "vertical" >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Starting City"
        android:textAlignment="center"
        android:id ="@+id/start"
        android:padding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Destination City"
        android:textAlignment="center"
        android:id ="@+id/dest"
        android:padding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Distance limit"
        android:textAlignment="center"
        android:id ="@+id/dist"
        android:padding="20dp"/>

    <Button
        android:id = "@+id/button"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:text = "get  location"
        android:padding="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/city"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Present City"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/kmtrav"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="KM travelled"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/kmrem"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="KM remaining"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/tot"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Total KM"/>

</LinearLayout>